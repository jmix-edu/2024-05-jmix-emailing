<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://taskDetailView.title"
      focusComponent="form">
    <data>
        <instance id="taskDc"
                  class="com.company.jmixpmflowbase.entity.Task">
            <fetchPlan extends="_base">
                <property name="assignee" fetchPlan="_base"/>
                <property name="project" fetchPlan="_base"/>
                <property name="timeEntries" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
            <collection id="timeEntriesDc" property="timeEntries"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="taskDc">
            <textField id="nameField" property="name"/>
            <entityPicker id="assigneeField" property="assignee">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
            <dateTimePicker id="startDateField" property="startDate"/>
            <textField id="estimatedEffortsField" property="estimatedEfforts"/>
            <entityPicker id="projectField" property="project">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
            <fileStorageUploadField id="attachmentField" property="attachment"/>
            <dateTimePicker id="dueDateField" property="dueDate"/>
        </formLayout>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button action="timeEntriesDataGrid.create"/>
            <button action="timeEntriesDataGrid.edit"/>
            <button action="timeEntriesDataGrid.remove"/>
        </hbox>
        <dataGrid id="timeEntriesDataGrid" dataContainer="timeEntriesDc" width="100%" height="100%">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns>
                <column property="timeSpent"/>
                <column property="entryDate"/>
                <column property="description"/>
            </columns>
        </dataGrid>
        <hbox id="detailActions">
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
            <button id="notifyAssigneeBtn" text="Notify assignee" icon="ENVELOPE"/>
        </hbox>
    </layout>
</view>
